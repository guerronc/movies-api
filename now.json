{
    "name": "platzivideo",
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@now/node"
        }
    ],
    "routes":[
        {
            "src": "(/(.*))",
            "dest": "/index.js"
        }
    ],
    "env":{
        "DB_USER":"@db-user",
        "DB_PASSWORD": "@db-password",
        "DB_HOST1": "@db-host0",
        "DB_HOST2": "@db-host1",
        "DB_HOST3": "@db-host2",
        "DB_NAME": "@db-name-movies",
        "DB_PORT": "@db-port"
    }
}